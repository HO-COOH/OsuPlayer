import "OsuPathItem.idl";

namespace OsuPlayer
{
    enum Mod
    {
        Normal,
        HalfTime,
        DoubleTime,
        NightCore
    };

    [bindable]
    [default_interface]
    runtimeclass SettingsViewModel : Windows.UI.Xaml.Data.INotifyPropertyChanged
    {
        SettingsViewModel();
    
        //Methods
        Windows.Foundation.IAsyncAction AddOsuPath();
        void ClearAll();

        //Data
        Mod DefaultMod{ get; set; };
        Windows.Foundation.Collections.IObservableVector<OsuPathItem> OsuPaths{ get; };
        Windows.Foundation.Collections.IObservableVector<String> Skins{ get; };
    }
}
